@model List<Producto>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container mt-5">
    <h1 class="mb-4">Nuestros Productos</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var prod in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@prod.ImagenProducto" class="card-img-top img-ajustada" alt="@prod.Descripción" />
                    <div class="card-body">
                        <h5 class="card-title">@prod.Descripción</h5>
                        <p class="card-text">Precio: $@prod.Precio.ToString("F2")</p>
                        <a asp-controller="ProyectoMascoTienda"
                           asp-action="DetalleProducto"
                           asp-route-id="@prod.Código"
                           class="btn btn-primary">
                            Ver detalle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>