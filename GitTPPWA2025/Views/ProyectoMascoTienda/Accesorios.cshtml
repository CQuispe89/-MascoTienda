@model List<Producto_>

@{
    ViewData["Title"] = "Accesorios";
}

@{
    ViewData["Title"] = "Accesorios";
    var busqueda = Context.Request.Query["busqueda"].ToString();
    var categoriaSeleccionada = Context.Request.Query["CategoriaAnimal"].ToString();
}
<div class="container my-4">
    <form method="get" asp-controller="ProyectoMascoTienda" asp-action="Accesorios">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex flex-grow-1 me-2">
                <input type="text" name="busqueda" class="form-control w-50 me-2" placeholder="Buscar productos..." value="@busqueda" />
                <button type="submit" class="btn btn-outline-primary">Buscar</button>
            </div>
            <div style="width: 250px;">
                <select name="CategoriaAnimal" class="form-select" onchange="this.form.submit()">
                    @Html.Raw($"<option value=\"\" {(categoriaSeleccionada == "" ? "selected" : "")}>Todas las categorías</option>")
                    @Html.Raw($"<option value=\"Perro\" {(categoriaSeleccionada == "Perro" ? "selected" : "")}>Perro</option>")
                    @Html.Raw($"<option value=\"Gato\" {(categoriaSeleccionada == "Gato" ? "selected" : "")}>Gato</option>")
                </select>
            </div>
        </div>
    </form>
</div>

<div class="container mt-5">
    <h1 class="mb-4">Accesorios</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var prod in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@prod.ImagenProducto" class="card-img-top img-ajustada" alt="@prod.Descripción" />
                    <div class="card-body">
                        <h5 class="card-title">@prod.Descripción</h5>
                        <p class="card-text">Precio: $@prod.Precio.ToString("F2")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
